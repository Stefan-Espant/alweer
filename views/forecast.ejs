        <section class="weather-conditions">
            <article class="widget large-widget">
                <div>
                    <h2>Komende uren</h2>
                </div>
                <ul>
                    <% for (let i = 0; i < 24; i++) { %>
                      <li>
                        <p><%= getTime(hourly.time[i]) %></p>
                        <h3><%= hourly.temperature_2m[i] %></h3>
                      </li>
                    <% } %>
                  </ul>
            </article>
            <div class="overview">
                <article class="widget mid-widget">
                    <h3>Zon op:</h3>
                    <h3>    
                        <%- include('./partials/svg-icons/sun') %>
                        <%= sunriseTime %>
                    </h3>
                </article>
                <article class="widget mid-widget">
                    <h3>Zon onder:</h3>
                    <h3>    
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-moon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
